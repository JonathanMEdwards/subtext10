{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "jsx": "react",
    "pretty": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/*",
    "./test/*"
  ]
}